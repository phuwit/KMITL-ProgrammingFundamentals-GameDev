{
    "tasks": [
        // courtesey of the glorious nat-thapas on github, i dont have the mental energy to figure this out
        {
            "type": "cppbuild",
            "label": "C/C++: linux clang++ build active file for debug",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-lm",
                "-I/usr/include/",
                "-L/usr/lib/",
                "-lsfml-audio",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: linux clang++ build active file for release",
            "command": "/usr/bin/clang++",
            "args": [
                "-lm",
                "-I/usr/include/",
                "-L/usr/lib/",
                "-lsfml-audio",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}-release"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Natthapas, edited by yours truly"
        }
    ],
    "version": "2.0.0"
}